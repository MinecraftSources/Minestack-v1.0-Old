<!DOCTYPE html>
<html lang="en">
<% include header.ejs %>
<body>

<% include top-navbar.ejs %>

<div class="jumbotron">
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-forgot-password"></span>Forgot Password</h1>

            <% if (errMessage.length > 0) { %>
            <div class="alert alert-danger"><%= errMessage %></div>
            <% } %>

            <!-- FORGOT FORM -->
            <form action="/session/forgot" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>

                <button type="submit" class="btn btn-warning">Reset Password</button>
            </form>

        </div>
    </div>
</div>

<% include footer.ejs %>
<!-- /container -->
<% include bootstrap.ejs %>
</body>
