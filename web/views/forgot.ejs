<!DOCTYPE html>
<html lang="en">
<% include header.ejs %>
<body>

<% include navbar.ejs %>

<div class="jumbotron">
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-forgot-password"></span>Forgot Password</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- FORGOT FORM -->
            <form action="/forgot" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>

                <button type="submit" class="btn btn-warning btn-primary">Reset Password</button>
            </form>

            <hr>

            <p>Need an account? <a href="/signup">Signup</a></p>

        </div>
    </div>
</div>

<% include footer.ejs %>
<!-- /container -->
<% include bootstrap.ejs %>
</body>
