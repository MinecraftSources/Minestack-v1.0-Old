<!DOCTYPE html>
<html lang="en">
<% include header.ejs %>
<body>

<% include navbar.ejs %>

<div class="jumbotron">
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-setup"></span>Setup MN Squared</h1>

            <% if (errMessage.length > 0) { %>
            <div class="alert alert-danger"><%= errMessage %></div>
            <% } %>

            <form action="/setup" method="post">
                <div class="form-group">
                    <label>MongoDB Address</label>
                    <input type="text" class="form-control" name="address" id="address">
                </div>

                <div class="form-group">
                    <label>MongoDB Port</label>
                    <input type="text" class="form-control" name="port" id="port">
                </div>

                <div class="form-group">
                    <label>MongoDB Username</label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="form-group">
                    <label>MongoDB Password</label>
                    <input type="text" class="form-control" name="password" id="password">
                </div>

                <button type="submit" class="btn btn-warning">Next</button>
            </form>

        </div>
    </div>
</div>

<% include footer.ejs %>
<!-- /container -->
<% include bootstrap.ejs %>
</body>
