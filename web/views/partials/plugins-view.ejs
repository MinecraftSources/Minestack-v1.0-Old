<h1 class="page-header">Plugins</h1>

<div class="table-responsive">
    <a href="/addplugin"><button type="button" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon glyphicon-plus"></span>Add Plugin</button></a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>ID</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="plugin in plugins">
            <td>{{ plugin.local.name }}</td>
            <td>{{ plugin._id }}</td>
            <td><button ng-click="edit(plugin._id)" type="button" class="btn btn-default btn-xs">
                <span class="glyphicon glyphicon glyphicon-pencil"></span></button></td>
        </tr>
        </tbody>
    </table>
</div>