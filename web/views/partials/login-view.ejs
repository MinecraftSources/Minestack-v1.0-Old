<h1>Login</h1>

<div ng-show="hasError" class="alert alert-danger">{{ error }}</div>

<!-- LOGIN FORM -->
<form class="form-horizontal" ng-submit="login()">
    <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>

        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail" ng-model = "loginData.email" name="email" placeholder="Email" required>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>

        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" ng-model = "loginData.password" name="password" placeholder="Password" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning btn-md">Login</button>
            <p><a href="/session/forgot">Forgot password</a>.</p>
        </div>
    </div>

</form>