<h1 class="page-header">Server Types</h1>

<div class="table-responsive">
    <a href="/addtype"><button type="button" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon glyphicon-plus"></span>Add Server Type</button></a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>ID</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="type in servertypes">
            <td>{{ type.local.name }}</td>
            <td>{{ type._id }}</td>
            <td><button ng-click="edit(type._id)" type="button" class="btn btn-default btn-xs">
                <span class="glyphicon glyphicon glyphicon-pencil"></span></button></td>
        </tr>
        </tbody>
    </table>
</div>